#!/bin/sh
. "${CALLMONITOR_CFG:="/mod/etc/default.callmonitor/system.cfg"}"
export PATH=$CALLMONITOR_PATH
DAEMON=callmonitor

. "${CALLMONITOR_LIBDIR}/rc.sh"

RC_TELEFON="/mod/pkg/$DAEMON/etc/init.d/rc.telefon"
FIFO="/var/run/$DAEMON/fifo"

if [ ! -d /var/run/$DAEMON ]; then
	mkdir -p /var/run/$DAEMON
fi

case "$1" in
	""|start|restart)
		if [ ! -r "/mod/etc/conf/$DAEMON.cfg" ]; then
			echo "Error[$DAEMON]: not configured" 1>&2
			exit 1
		fi
		;;
esac

start_daemon() {
	if [ ! -e /mod/etc/callmonitor.listeners ]; then
		ln -sf "$CALLMONITOR_LISTENERS" /mod/etc/callmonitor.listeners
	fi

	echo -n "Starting callmonitor..."
	"$DAEMON" > /dev/null 2>&1
	check_status
}
stop_daemon() {
	echo -n "Stopping callmonitor..."
	"$DAEMON" -s
	check_status
}

start() {
	local exitval=0
	$RC_TELEFON stop
	start_daemon || exitval=$?
	if [ $exitval -ne 0 ]; then
		$RC_TELEFON start null
	else
		$RC_TELEFON start fifo
	fi
	return $exitval
}
stop() {
	local exitval=0
	$RC_TELEFON stop
	stop_daemon || exitval=$?
	$RC_TELEFON start null
	return $exitval
}
fast_restart() {
	# restart telefon only if needed
	$RC_TELEFON reload
	
	# keep pipe alive while callmonitor is restartet
	cat "$FIFO" > /dev/null &
	catpid=$!
	stop_daemon && start_daemon && kill "$catpid" > /dev/null 2>&1
}
restart() {
	stop
	start
}

case "$1" in
	"")
		if type modreg > /dev/null; then
			modreg cgi $DAEMON 'Callmonitor'
			if [ -r "/tmp/flash/exhosts.def" ]; then 
				deffile='/tmp/flash/callmonitor/listeners.def'
			else 
				deffile="/etc/default.$DAEMON/listeners.def"
			fi
			modreg file 'listeners' 'Listeners' 0 "$deffile"
		fi
		
		if [ "$CALLMONITOR_ENABLED" != "yes" ]; then
			echo "$DAEMON is disabled" 1>&2
			exit 1;
		fi

		if [ ! -z "$(pidof $DAEMON)" ]; then
			echo "$DAEMON already started."
		else
			start
		fi
		;;
	start)
		if [ -z "$(pidof $DAEMON)" ]; then
			start
		else
			exit 0
		fi
		;;
	stop)
		stop
		;;
	restart)
		pid="$(pidof $DAEMON)"
		if [ -z "$pid" ]; then
			restart
		else
			fast_restart
		fi
		;;
	status)
		if [ -z "$(pidof $DAEMON)" ]; then
			echo "stopped"
		else
			echo "running"
		fi
		;;
	reload)
		pid="$(pidof $DAEMON)"
		if [ -z "$pid" ]; then
			echo "$DAEMON is not running" 1>&2
			exit 1
		fi
		kill -USR1 "$pid" > /dev/null 2>&1
		;;
	*)
		echo "Usage: $0 [start|stop|restart|status|reload]" 1>&2
		exit 1
		;;
esac
