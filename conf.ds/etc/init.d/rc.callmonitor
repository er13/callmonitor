#!/bin/sh
PATH=/bin:/usr/bin:/sbin:/usr/sbin:/mod/usr/bin:/mod/usr/sbin
DAEMON=callmonitor

. "${CALLMONITOR_CFG:="/mod/etc/default.$DAEMON/system.cfg"}"
TELEFON="$CALLMONITOR_LIBDIR/telefon"
FIFO="/var/run/callmonitor/fifo"

if [ ! -d /var/run/$DAEMON ]; then
	mkdir -p /var/run/$DAEMON
fi

case "$1" in
	""|start|restart)
		if [ ! -r "/mod/etc/conf/$DAEMON.cfg" ]; then
			echo "Error[$DAEMON]: not configured" 1>&2
			exit 1
		fi
		;;
esac

check_status() {
	local exitval="${1:-$?}"
	if [ "$exitval" -eq 0 ]; then
		echo "done."
	else
		echo "failed."
	fi
	return $exitval
}

start_telefon() {
	echo -n "Starting telefon..."
	"$TELEFON" < /dev/null 1>&3 3>&- 2> /dev/null
	check_status
}
stop_telefon() {
	echo -n "Stopping telefon..."
	killall telefon > /dev/null 2>&1
	check_status
}

start_daemon() {
	if [ ! -e /mod/etc/callmonitor.listeners ]; then
		ln -sf "$CALLMONITOR_LISTENERS" /mod/etc/callmonitor.listeners
	fi

	echo -n "Starting callmonitor..."
	"$DAEMON" > /dev/null 2>&1
	check_status
}
stop_daemon() {
	echo -n "Stopping callmonitor..."
	"$DAEMON" -s
	check_status
}

start() {
	local exitval=0
	stop_telefon
	start_daemon || exitval=$?
	if [ $exitval -ne 0 ]; then
		start_telefon 3> /dev/null
	else
		start_telefon 3> "$FIFO"
	fi
	return $exitval
}
stop() {
	local exitval=0
	stop_telefon
	stop_daemon || exitval=$?
	start_telefon 3> /dev/null
	return $exitval
}
restart() {
	# keep pipe alive while callmonitor is restartet
	cat "$FIFO" > /dev/null &
	catpid=$!
	stop_daemon && start_daemon && kill "$catpid" > /dev/null 2>&1
}

case "$1" in
	"")
		modreg cgi $DAEMON 'Callmonitor'
		if [ -r "/tmp/flash/exhosts.def" ]; then 
			deffile='/tmp/flash/callmonitor/listeners.def'
		else 
			deffile="/etc/default.$DAEMON/listeners.def"
		fi
		modreg file 'listeners' 'Listeners' "$deffile"
		
		if [ "$CALLMONITOR_ENABLED" != "yes" ]; then
			echo "$DAEMON is disabled" 1>&2
			exit 1;
		fi

		if [ ! -z "$(pidof $DAEMON)" ]; then
			echo "$DAEMON already started."
		else
			start
		fi
		;;
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		restart
		;;
	status)
		if [ -z "$(pidof $DAEMON)" ]; then
			echo "stopped"
		else
			echo "running"
		fi
		;;
	reload)
		pid="$(pidof $DAEMON)"
		if [ -z "$pid" ]; then
			echo "$DAEMON is not running" 1>&2
			exit 1
		fi
		kill -USR1 "$pid" > /dev/null 2>&1
		;;
	*)
		echo "Usage: $0 [start|stop|restart|status|reload]" 1>&2
		exit 1
		;;
esac
