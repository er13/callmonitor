#!/bin/sh

PATH=/bin:/usr/bin:/sbin:/usr/sbin:/mod/bin:/mod/usr/bin:/mod/sbin:/mod/usr/sbin
DAEMON=callmonitor

case "$1" in
	""|start|restart)
		if [ ! -r "/mod/etc/conf/$DAEMON.cfg" ]; then
			echo "Error[$DAEMON]: not configured" 1>&2
			exit 1
		fi

		. "/mod/etc/conf/$DAEMON.cfg"
		;;
esac

start() {
	echo -n "Starting call monitor..."

	if [ ! -L /mod/etc/callmonitor.listeners ]; then
		ln -sf "$CALLMONITOR_LISTENERS" /mod/etc/callmonitor.listeners
	fi
	# $DAEMON
	exitval=$?
	if [ "$exitval" -eq 0 ]; then
		echo "done."
	else
		echo "failed."
		exit $exitval
	fi
}

stop() {
	echo -n "Stopping call monitor..."
	killall $DAEMON > /dev/null 2>&1
	exitval=$?
	if [ "$exitval" -eq 0 ]; then
		echo "done."
	else
		echo "failed."
		exit $exitval
	fi
}

case "$1" in
	"")
		if [ "$CALLMONITOR_ENABLED" != "yes" ]; then
			echo "$DAEMON is disabled" 1>&2
			exit 1;
		fi

		start
		;;
	start)
		start
		;;
	stop)
		stop
		;;
	restart)
		stop
		sleep 1
		start
		;;
	status)
		if [ -z "`pidof $DAEMON`" ]; then
			echo "stopped"
		else
			echo "running"
		fi
		;;
	*)
		echo "Usage: $0 [start|stop|restart|status]" 1>&2
		exit 1
		;;
esac

exit 0
